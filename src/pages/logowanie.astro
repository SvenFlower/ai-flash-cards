---
import Layout from '../layouts/Layout.astro';
import { LoginForm } from '../components/LoginForm';
---

<Layout title="Logowanie - 10x FlashCards">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md">
      <div class="mb-8 text-center">
        <a href="/" class="inline-block mb-4">
          <h1 class="text-3xl font-bold text-gray-900">10x FlashCards</h1>
        </a>
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Zaloguj się</h2>
        <p class="text-gray-600">Witaj ponownie! Zaloguj się do swojego konta</p>
      </div>

      <div class="rounded-lg border border-gray-200 bg-white p-8 shadow-sm">
        <LoginForm client:load />
      </div>
    </div>
  </div>
</Layout>
