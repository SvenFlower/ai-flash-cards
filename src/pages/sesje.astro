---
import Layout from '../layouts/Layout.astro';
import { getSessions } from '../lib/storage';
import { AuthNav } from '../components/AuthNav';

// Force server-side rendering to access cookies
export const prerender = false;

// Debug: Check if user is authenticated
const user = Astro.locals.user;
const supabase = Astro.locals.supabase;
console.log('[DEBUG sesje.astro] User:', user?.email, 'ID:', user?.id);

// For now, directly query sessions using the server supabase client
const userId = user?.id;
console.log('[DEBUG sesje.astro] userId from locals:', userId);

let sessions = [];

if (userId && supabase) {
  const { data, error } = await supabase
    .from('sessions')
    .select(`
      *,
      flash_cards (count)
    `)
    .eq('user_id', userId)
    .order('created_at', { ascending: false });

  console.log('[DEBUG sesje.astro] Query error:', error);
  console.log('[DEBUG sesje.astro] Query data:', data);

  if (!error && data) {
    sessions = data.map((session: any) => ({
      id: session.id,
      name: session.name,
      createdAt: session.created_at,
      updatedAt: session.updated_at,
      flashCardCount: session.flash_cards?.[0]?.count || 0,
    }));
  }
}

console.log('[DEBUG sesje.astro] Sessions count:', sessions.length);
console.log('[DEBUG sesje.astro] Sessions:', sessions);

// Disable caching for this page
Astro.response.headers.set('Cache-Control', 'no-store, no-cache, must-revalidate');
---

<Layout title="Sesje - 10x FlashCards">
  <div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
    <nav class="bg-white border-b border-gray-200">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 justify-between items-center">
          <div>
            <h1 class="text-xl font-bold text-gray-900">10x FlashCards</h1>
          </div>
          <div class="flex items-center gap-6">
            <div class="flex items-center gap-4">
              <a
                href="/"
                class="text-gray-600 hover:text-gray-900 font-medium transition-colors"
              >
                Strona główna
              </a>
              <a
                href="/sesje"
                class="text-blue-600 font-medium"
              >
                Sesje
              </a>
            </div>
            <AuthNav client:load />
          </div>
        </div>
      </div>
    </nav>

    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
      <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">Twoje sesje</h2>
        <p class="text-gray-600">Zarządzaj swoimi sesjami nauki i fiszkami</p>
      </div>

      {sessions.length === 0 ? (
        <div class="rounded-lg border border-gray-200 bg-white p-12 text-center shadow-sm">
          <svg
            class="mx-auto h-12 w-12 text-gray-400 mb-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width={2}
              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            />
          </svg>
          <h3 class="text-lg font-medium text-gray-900 mb-2">Brak sesji</h3>
          <p class="text-gray-600 mb-4">
            Nie masz jeszcze żadnych zapisanych sesji. Wygeneruj fiszki i zapisz je do sesji!
          </p>
          <a
            href="/"
            class="inline-block rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700"
          >
            Wróć do strony głównej
          </a>
        </div>
      ) : (
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {sessions.map((session) => (
            <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
              <div class="mb-4">
                <h3 class="text-lg font-bold text-gray-900 mb-1">{session.name}</h3>
                <p class="text-sm text-gray-500">
                  {new Date(session.createdAt).toLocaleDateString('pl-PL', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </p>
              </div>

              <div class="mb-4">
                <span class="inline-flex items-center gap-2 rounded-full bg-blue-100 px-3 py-1 text-sm font-medium text-blue-800">
                  <svg
                    class="h-4 w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width={2}
                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    />
                  </svg>
                  {session.flashCardCount} {session.flashCardCount === 1 ? 'fiszka' : 'fiszek'}
                </span>
              </div>

              <div class="flex gap-2">
                <a
                  href={`/sesje/${session.id}`}
                  class="flex-1 rounded-lg bg-blue-600 px-4 py-2 text-center text-sm font-medium text-white hover:bg-blue-700"
                >
                  Zobacz
                </a>
                <button
                  class="rounded-lg border border-red-300 px-4 py-2 text-sm font-medium text-red-600 hover:bg-red-50"
                  data-session-id={session.id}
                  data-session-name={session.name}
                  onclick="handleDeleteSession(this)"
                >
                  Usuń
                </button>
              </div>
            </div>
          ))}
        </div>
      )}
    </div>
  </div>
</Layout>

<script>
  declare global {
    interface Window {
      handleDeleteSession: (button: HTMLButtonElement) => void;
    }
  }

  window.handleDeleteSession = async (button: HTMLButtonElement) => {
    const sessionId = button.dataset.sessionId;
    const sessionName = button.dataset.sessionName;

    if (!sessionId || !sessionName) return;

    const confirmed = confirm(`Czy na pewno chcesz usunąć sesję "${sessionName}"? Ta operacja jest nieodwracalna.`);

    if (!confirmed) return;

    try {
      const response = await fetch(`/api/sessions/${sessionId}`, {
        method: 'DELETE',
      });

      if (response.ok) {
        // Reload the page to show updated sessions
        window.location.reload();
      } else {
        alert('Błąd przy usuwaniu sesji');
      }
    } catch (error) {
      console.error('Error deleting session:', error);
      alert('Błąd przy usuwaniu sesji');
    }
  };
</script>
